# Horizon Prediction Market Environment Variables
# Copy this file to .env and fill in your actual values

# Database Path (SQLite)
# Optional - defaults to ./local.db in project root
# DATABASE_PATH=./local.db

# Session Secret (generate a random string)
SESSION_SECRET=your-random-session-secret-here

# TheSportsDB API Key (Premium)
THESPORTSDB_API_KEY=your-thesportsdb-api-key

# Blockchain Configuration (BNB Chain)
# BNB Testnet: Chain ID 97
# BNB Mainnet: Chain ID 56
CHAIN_ID=56
CHAIN_RPC_URL=https://bsc-dataseed.binance.org/

# Contract Addresses (BNB Chain Mainnet)
MARKET_FACTORY_ADDRESS=0x22Cc806047BB825aa26b766Af737E92B1866E8A6
HORIZON_TOKEN_ADDRESS=0x5b2bA38272125bd1dcDE41f1a88d98C2F5c14444
OUTCOME_TOKEN_ADDRESS=0x17B322784265c105a94e4c3d00aF1E5f46a5F311
HORIZON_PERKS_ADDRESS=0x71Ff73A5a43B479a2D549a34dE7d3eadB9A1E22C
FEE_SPLITTER_ADDRESS=0x275017E98adF33051BbF477fe1DD197F681d4eF1
RESOLUTION_MODULE_ADDRESS=0xF0CF4C741910cB48AC596F620a0AE892Cd247838
AI_ORACLE_ADAPTER_ADDRESS=0x8773B8C5a55390DAbAD33dB46a13cd59Fb05cF93

# Admin Wallet Address (Fixed admin access - matches HorizonToken owner)
# This wallet has exclusive admin privileges for market creation and resolution
ADMIN_WALLET_ADDRESS=0x5b2bA38272125bd1dcDE41f1a88d98C2F5c14444
VITE_ADMIN_WALLET_ADDRESS=0x5b2bA38272125bd1dcDE41f1a88d98C2F5c14444

# Oracle API (for AI-powered resolution)
ORACLE_API_URL=https://api.oraprotocol.ai

# WalletConnect Project ID (Client-side - needs VITE_ prefix)
# Get from https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# IPFS Configuration (for market metadata storage)
# Get JWT from https://pinata.cloud
VITE_PINATA_JWT=your-pinata-jwt-token

# Node Environment
NODE_ENV=development

# Replit-specific (automatically set in Replit environment)
# REPLIT=1
# REPLIT_DB_URL=
