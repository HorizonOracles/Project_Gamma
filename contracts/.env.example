# ============================================================
# DEPLOYER CONFIGURATION
# ============================================================

# Deployer Private Key (DO NOT commit the actual .env file!)
# Generate with: cast wallet new
PRIVATE_KEY=

# ============================================================
# BLOCK EXPLORER API KEYS (for contract verification)
# ============================================================

# BSCScan API Key - https://bscscan.com/myapikey
BSCSCAN_API_KEY=

# Etherscan API Key - https://etherscan.io/myapikey
ETHERSCAN_API_KEY=

# Basescan API Key - https://basescan.org/myapikey
BASESCAN_API_KEY=

# ============================================================
# DEPLOYMENT CONFIGURATION
# ============================================================

# Token Configuration
HORIZON_INITIAL_SUPPLY=100000000000000000000000000  # 100M HORIZON (18 decimals)
OUTCOME_TOKEN_URI=https://four.meme/api/metadata/{id}.json

# ============================================================
# ADMIN ADDRESSES
# ============================================================

# Protocol Owner (manages all contracts, can update parameters)
# If not set, defaults to deployer address
PROTOCOL_OWNER=

# Protocol Treasury (receives protocol fees)
# If not set, defaults to deployer address
PROTOCOL_TREASURY=

# Arbitrator (can finalize disputed resolutions)
# If not set, defaults to deployer address
ARBITRATOR_ADDRESS=

# AI Signer (authorized to submit AI-powered resolutions)
# If not set, defaults to deployer address
AI_SIGNER_ADDRESS=

# ============================================================
# PROTOCOL PARAMETERS
# ============================================================

# Market Creation
MIN_CREATOR_STAKE=10000000000000000000000  # 10,000 HORIZON (18 decimals)

# Resolution System
MIN_RESOLUTION_BOND=1000000000000000000000  # 1,000 HORIZON (18 decimals)
DISPUTE_WINDOW=172800  # 48 hours in seconds

# ============================================================
# DEPLOYED CONTRACT ADDRESSES
# (Filled automatically after deployment)
# ============================================================

HORIZON_TOKEN_ADDRESS=
OUTCOME_TOKEN_ADDRESS=
FEE_SPLITTER_ADDRESS=
HORIZON_PERKS_ADDRESS=
RESOLUTION_MODULE_ADDRESS=
AI_ORACLE_ADAPTER_ADDRESS=
